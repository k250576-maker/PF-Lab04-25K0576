// Online C compiler to run C program online
#include <stdio.h>

int main() {
    
    int choice,qty,price,time,delivery;
    float total;
    char crust,cheese,sid,gbread;
    
    printf("Choose a pizza size:\n1. Small\n2. Medium\n3. Large\nEnter your choice (1-3): ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("You chose Small pizza.\n");
        price = 8;
    } else if (choice == 2) {
        printf("You chose Medium pizza.\n");
        price = 12;
    } else if (choice == 3) {
        printf("You chose Large pizza.\n");
        price = 15;
    } else {
        printf("Invalid size.\n");
        return 0;
    }
    
    printf("How many pizzas do you want (1-3)? ");
    scanf("%d",&qty);
    
     if (qty == 1) {
        total = price;
        printf("Your total is $%.2f\n", total);
    } else if (qty == 2) {
        total = (price*2)-1;
        printf("Your total is $%.2f\n", total);
    } else if (qty == 3) {
        total = (price*3)-2;
        printf("Your total is $%.2f\n", total);
    } else {
        printf("Check our multi-pizza deals.\n");
        return 0;
    }
    
    printf("What type of crust do you want?\nPress r for regular($0), t for thin crust ($1) and s for stuffed crust ($2): ");
    scanf(" %c",&crust);
    
     if(qty==3 && crust == 's'){
        printf("You get free garlic bread!\n");
        gbread = 'y';
    }
    
    if(crust == 'r'){
       printf("Your new total is $%.2f\n", total);
    } else if(crust == 't'){
        total+= 1;
        printf("Your new total is $%.2f\n", total);
    } else if(crust == 's'){
        total+= 2;
        printf("Your new total is $%.2f\n", total);
    } else{
        printf("Invalid crust type.");
        return 0;
    }
    
    printf("Do you want extra cheese?(y/n): ");
    scanf(" %c",&cheese);
    
    if(cheese == 'y'){
        total+= 1.5;
        printf("Your new total is $%.2f\n", total);
    } else if(cheese == 'n'){
        printf("Your total is $%.2f\n", total);
    } else{
        printf("Invalid answer");
        return 0;
    
    printf("Can you tell us your current time in 0-23 format?: ");
    scanf("%d",&time);
    
    if(time <= 14 && time >= 11){
        printf("You get a 10 percent discount!!");
        total*=0.9;
        printf("Your new total is $%.2f\n", total);
    } else if(time < 23){
        printf("Your total is $%.2f\n", total);
    } else{
        printf("Invalid time.");
        return 0;
    
    printf("Do you have a Student ID?(y/n): ");
    scanf(" %c",&sid);
    
    if(sid == 'y'){
        printf("You get a 2 dollars discount!!");
        total-= 2;
        printf("Your new total is $%.2f\n", total);
    } else if(sid == 'n'){
        printf("Your total is $%.2f\n", total);
    } else{
        printf("Invalid answer.");
        return 0;
    
    printf("Is it a delivry or pickup? (1 for delivery & 2 for pickup): ");
    scanf("%d",&delivery);
    
    if(delivery == 1){
        total+=3;
        printf("Your new total is $%.2f\n", total);
    } else if(delivery == 2){
        printf("Your total is $%.2f\n", total);
    } else {
        printf("Invalid delivery type!");
        return 0;
    }
    
    printf("\tReceipt\n");
      if(crust == 't'){
        printf("$1 for thin crust\n");
    }
      if(crust == 's'){
        printf("$2 for thin crust\n");
    }
    if(gbread == 'y'){
        printf("A free garlic bread\n");
    }
      if(cheese == 'y'){
        printf("$1.5 for extra cheese\n");
    }        
    if(time <= 14 && time >= 11){
        printf("10 percent discount for lunch!\n");
    }
    if(sid == 'y'){
        printf("$2 off for Student ID!\n");
    }
    if(delivery == 1){
        printf("$3 for delivery\n");
    }
    printf("Final total: %.2f",total);
    return 0;
}
